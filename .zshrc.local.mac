export BREW_PREFIX=$(brew --prefix)
export PATH=$HOME/.nodebrew/current/bin:$PATH:$BREW_PREFIX/share/git-core/contrib/diff-highlight:$HOME/bin/sqlplus/instantclient_12_1:$HOME/.rbenv/bin
