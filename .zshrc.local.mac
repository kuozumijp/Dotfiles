export MANPATH=$BREW_PREFIX/opt/gnu-sed/libexec/gnuman:$BREW_PREFIX/opt/grep/libexec/gnuman:$MANPATH
export STUDIO_JDK=/Library/Java/JavaVirtualMachines/jdk1.8.0_25.jdk
